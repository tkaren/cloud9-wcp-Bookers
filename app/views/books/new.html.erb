<h1>New book</h1>
<%= form_with model:@book, local: true do |f| %>
    <h4>Titel</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'Create book' %>
<% end %>

<% @book.errors.full_messages.each do |message| %>
  <div class="form-error">
    <%= message %>
  </div>
<% end %>






